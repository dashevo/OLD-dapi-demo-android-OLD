<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progressBar"
        app:mpb_progressStyle="horizontal"
        app:mpb_useIntrinsicPadding="false"
        style="@style/progress_bar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/balance"
            android:text="@string/username_label"
            style="@style/login_form_label" />

        <TextView
            android:id="@+id/address"
            android:text="@string/username_label"
            style="@style/login_form_label" />

        <TextView
            android:id="@+id/best_chain_height"
            android:text="@string/username_label"
            style="@style/login_form_label" />

        <TextView
            android:id="@+id/blocks_left"
            android:text="@string/username_label"
            style="@style/login_form_label" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/username_label"
            style="@style/login_form_label" />

        <EditText
            android:id="@+id/username"
            android:text="alice"
            tools:text="sambarboza"
            style="@style/login_form_input" />

        <TextView
            tools:visibility="visible"
            android:visibility="gone"
            android:text="@string/recovery_phrase_label"
            style="@style/login_form_label" />

        <EditText
            android:id="@+id/recovery_phrase"
            android:lines="4"
            android:text="@string/dummy_recovery_phrase"
            android:lineSpacingExtra="3sp"
            android:layout_height="wrap_content"
            style="@style/login_form_input" />

        <Button
            android:id="@+id/loginBtn"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/login"/>

    </LinearLayout>


</RelativeLayout>